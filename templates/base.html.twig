<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# <link rel="stylesheet" href={{asset("assets/style.css")}}> #}
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
            {# {{ encore_entry_link_tags('calendrier') }} #}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
            {# {{ encore_entry_script_tags('calendrier') }} #}
        {% endblock %}
    </head>
    <body>
    {# NAVIGATION #}
    {% block navig %}
    <nav>
        <div class="barre-navigation container">
            <!-- Logo -->
            <div class="logo-container">    
                <a href="{{ path ('liste_users') }}"><img class="nav-logo" src={{asset("images/logo-kribou.png")}} alt="Logo K-ribou" title="home"/></a>
            </div>
            <ul class="nav-list container upper taille100">
                <!-- Menus -->
                <li class="nav-item">
                    <a class="nav-link beige-color font-titre" href="{{ path ('liste_users') }}">Joueurs</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link beige-color font-titre" href="#skillsSection">Skills</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link beige-color font-titre" href="#portfolioSection">Portfolio</a>
                </li>
            </ul>
            {# Ondulation blanche #}
            {# <div class="ondulBlanc"></div> #}
        </div>
    </nav>
    {% endblock %}

    {# MAIN #}
    <main>
        {# CALENDRIER #}
        {% block calendrier %}
            {# <div id="calendrier" data-calendrier="{{ evenementsJSON }}">
                {{ dump(evenementsJSON) }}
            </div> #}
        {% endblock %}

        {# BODY #}
        {% block body %}
        {% endblock %}
    </main>

    {# FOOTER #}
    
    </body>
</html>
