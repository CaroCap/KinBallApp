{% extends 'base.html.twig' %}

{% block title %}Hello UserController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    {# .container{ display: flex; width: 800px; height: 80vh; flex-wrap: wrap;} #}
    .container{ display: flex; flex-wrap: wrap; justify-content: center;}
    .menuFiltre{ text-decoration: none; display: inline; border: solid 1px black; padding: 5px; margin-bottom:10px}
    .menuFiltre a { text-decoration: none; display: inline; padding: 5px; color:black}
    .menuFiltre a:hover { color:red}
    .cartePlayer{ border : solid black 1px; border-radius : 15px; margin : 15px; width: 250px; height: 300px; padding:15px; text-align: center;}
    .photoPlayer{max-width: 230px; max-height: 230px; }
    label{font-weight:bold;}
</style>

<div class="example-wrapper">
    <h1>Liste Players</h1>

{# Filtres Catégories #}
<div class="container">
    <ul>
        <li class="menuFiltre"><a href="{{ path ('liste_dames') }}">Dames</a></li>
        <li class="menuFiltre"><a href="{{ path ('liste_hommes') }}">Hommes</a></li>
        <li class="menuFiltre"><a href="{{ path ('liste_mixtes') }}">Mixtes</a></li>
        <li class="menuFiltre"><a href="{{ path ('liste_users') }}">All</a></li>
    </ul>
</div>

{# Liste Joueurs #}
<div class="container">
    {% for inscr in inscriptions %}
        <div class="cartePlayer">
            {% if inscr.player.photo is same as (null) %}
                <img class="photoPlayer" src="{{ asset ('images/photoUser/joueur.png') }}" alt="photo">
            {% else %}
                <img class="photoPlayer" src="{{ asset ('images/photoUser/' ~ inscr.player.photo ) }}" alt="photo">
            {% endif %}

            <br> 
            <span id="nomPrenom">{{inscr.player.nom}} {{inscr.player.prenom}}</span>
            <br> 

                <label for="categorie">Catégorie : </label>
                <span id="categorie">{{inscr.categorie.typeCategorie}}</span>
        </div>
    {% endfor %}
    </div>
</div>
{% endblock %}
