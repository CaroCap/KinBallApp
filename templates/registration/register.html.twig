{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <h1>Register</h1>

    {{ form_start(registrationForm) }}
        {# {{form_widget (registrationForm) }} #}
<h3>Coordonn√©es du Joueur</h3>
        {{ form_row(registrationForm.nom) }}
        {{ form_row(registrationForm.prenom) }}
        {{ form_row(registrationForm.telephone) }}
        {{ form_row(registrationForm.dateNaissance) }}
        {# {{ form_row(registrationForm.categorie.typeCategorie) }} #}
        {{ form_row(registrationForm.photo) }}
        {{ form_row(registrationForm.accordPhoto) }}
<h4>Adresse</h4>
        {{ form_row(registrationForm.rue) }}
        {{ form_row(registrationForm.numero) }}
        {{ form_row(registrationForm.codePostal) }}
        {{ form_row(registrationForm.ville) }}


<h3>Info de Login</h3>
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Password'
        }) }}
        {{ form_row(registrationForm.agreeTerms) }}

<h3>Personne de Contact</h3>
        {{ form_row(registrationForm.persContactNom) }}
        {{ form_row(registrationForm.persContactTel) }}
        {{ form_row(registrationForm.persContactMail) }}

        <button type="submit" class="btn">Register</button>
    {{ form_end(registrationForm) }}
{% endblock %}
