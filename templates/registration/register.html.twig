{% block title %}Register{% endblock %}

{% block body %}
<div class="text-center bodyLogin">

          {{ form_start(registrationForm) }}
    <div class="formDiv row g-3">
        <h1 class="h3 mb-3 fw-normal">Register</h1>
<h3>Coordonnées du Joueur</h3>
        <div class="col-md-6">
          {{ form_row(registrationForm.nom) }}
        </div>
        <div class="col-md-6">
          {{ form_row(registrationForm.prenom) }}
        </div>

        <div class="col-md-6">
          {{ form_row(registrationForm.telephone) }}
        </div>
        <div class="col-md-2">
          {{ form_row(registrationForm.genre) }}
        </div>
        <div class="col-md-4">
          {{ form_row(registrationForm.dateNaissance) }}
        </div>



{# <h5>Adresse</h5> #}
        <div class="col-2">
          {{ form_row(registrationForm.numero) }}
        </div>
        <div class="col-5">
          {{ form_row(registrationForm.rue) }}
        </div>
        <div class="col-md-2">
          {{ form_row(registrationForm.codePostal) }}
        </div>
        <div class="col-md-3">
          {{ form_row(registrationForm.ville) }}
        </div>

        <div class="col-md-5">
          {{ form_label(registrationForm.photo, 'Photo d\'identité') }}
          {{ form_row(registrationForm.photo, {label: ' '}) }}
        </div>
        <div class="col-md-7">
          <div class="form-check">
            {{ form_row(registrationForm.accordPhoto) }}
          </div>
        </div>

<h3>Personne de Contact</h3>
        <div class="col-md-4">
          {{ form_row(registrationForm.persContactNom) }}
        </div>
        <div class="col-md-4">
          {{ form_row(registrationForm.persContactTel) }}
        </div>
        <div class="col-md-4">
          {{ form_row(registrationForm.persContactMail) }}
        </div>

<h3>Info de Login</h3>
        <div class="col-md-4">
        {{ form_row(registrationForm.email) }}
        </div>
        <div class="col-md-4">
        {{ form_row(registrationForm.plainPassword, {label: 'Password'}) }}
        </div>
        
        <div class="col-12">
          <button type="submit" class="btn btn-primary">Enregistrer</button>
        </div>

        {# TOKEN Caché mais important pour validation #}
        {{ form_row(registrationForm._token) }}

  </div>
      {{ form_end(registrationForm) }}
</div>

{% endblock %}

