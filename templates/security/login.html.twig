{% extends 'base.html.twig' %}

{# Pour écraser la navig #}
{% block navbar %}
<div></div>
{% endblock %}

{% block title %}Log in!{% endblock %}

{% block stylesheet %}

{% endblock %}

{% block body %}
<div class="text-center bodyLogin">
    <div class="form-signin">
        <form method="post">
        <a class="" href="{{ path ('app_accueil') }}"><img class="mb-4" src={{asset("images/logo-kribou.png")}} alt="Logo K-ribou" title="home"/ width="72" height="72"></a>
        <h1 class="h3 mb-3 fw-normal">Login</h1>
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            <div class="form-floating">
            <input type="email" class="form-control" id="inputEmail" placeholder="name@example.com" value="{{ last_username }}" name="email" autocomplete="email" required autofocus>
            <label for="inputEmail">Email</label>
            </div>

            <div class="form-floating">
            <input type="password" class="form-control" id="inputPassword" placeholder="Password" name="password" autocomplete="current-password" required>
            <label for="inputPassword">Password</label>
            </div>

            {# TOKEN Caché mais important pour validation #}
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            {# <div class="checkbox mb-3">
            <label>
                <input type="checkbox" value="remember-me"> Remember me
            </label>
            </div> #}
            <button class="w-100 btn btn-lg btn-primary" type="submit">Sign in</button>
            {# <p class="mt-5 mb-3 text-muted">&copy; 2017–2021</p> #}
        </form>
        <a class="w-100 mt-5 btn btn-lg btn-outline-primary" href="{{ path ('app_register') }}">Créer un nouveau compte</a>
    </div>
</div>

{% endblock %}

{% block footer %}<div></div>>{% endblock %}
